<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppToolbar" parent="Theme.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_350</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/AppToolbar</item>
    </style>

    <style name="CustomTabLayout">
<!--        <item name="tabIndicatorColor">@color/selector_tab_indicator_color</item>-->
<!--        <item name="tabIndicatorHeight">2dp</item>-->
<!--        <item name="tabSelectedTextColor">@color/selector_tab_text_color</item>-->
<!--        <item name="tabTextColor">@color/selector_tab_text_color</item>-->
<!--        <item name="tabTextAppearance">@style/AppTextCaption</item>-->
    </style>

    <style name="CustomTabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppToolbar.Gray_900">
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/selector_chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/selector_chip_stroke_color</item>
        <item name="chipBackgroundColor">@color/selector_chip_bg_color</item>
        <item name="chipMinHeight">34dp</item>

        <item name="chipIconSize">28dp</item>
        <item name="iconStartPadding">4dp</item>

        <item name="android:theme">@style/ChipOverlayTheme</item>
    </style>

    <style name="CustomChipStyleWithIcon" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/black</item>
        <item name="chipIcon">@drawable/ic_thunder</item>
        <item name="chipIconVisible">true</item>
        <item name="chipIconSize">28dp</item>
        <item name="iconStartPadding">4dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="chipMinHeight">34dp</item>
        <item name="android:theme">@style/ChipOverlayTheme</item>
    </style>

    <style name="ChipOverlayTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Any other customization for this theme overlay -->
    </style>

    <style name="AppTextChipLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AppTextCaption">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_150</item>
    </style>
    
    <style name="AppTextCaption.Gray150">
        <item name="android:textColor">@color/gray_150</item>
    </style>

    <style name="AppTextCaption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextCaption.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTextTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>