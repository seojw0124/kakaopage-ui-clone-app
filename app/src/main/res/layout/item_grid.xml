<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_content_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_content_02"
        app:layout_constraintEnd_toStartOf="@id/iv_content_04"
        app:layout_constraintHorizontal_weight="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_content_02_title"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/tv_content_02_views"
        app:layout_constraintEnd_toEndOf="@id/iv_content_02"
        app:layout_constraintStart_toStartOf="@id/iv_content_02" />

    <TextView
        android:id="@+id/tv_content_02_views"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5ì–µ"
        android:textColor="@color/gray_200"
        android:textSize="10sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_content_02"
        app:layout_constraintEnd_toEndOf="@id/iv_content_02"
        app:layout_constraintStart_toStartOf="@id/iv_content_02" />

    <ImageView
        android:id="@+id/iv_content_04"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_content_04"
        app:layout_constraintEnd_toStartOf="@id/iv_content_03"
        app:layout_constraintHorizontal_weight="0.333"
        app:layout_constraintStart_toEndOf="@id/iv_content_02"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_content_03"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_content_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.333"
        app:layout_constraintStart_toEndOf="@id/iv_content_04"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>