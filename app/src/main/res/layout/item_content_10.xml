<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_content_10"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/bg_content_image_8dp"
        android:clipToOutline="true"
        android:src="@drawable/img_content_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_content_10_waiting"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_free_3_days_waiting"
        app:layout_constraintStart_toStartOf="@id/iv_content_10"
        app:layout_constraintTop_toTopOf="@id/iv_content_10" />

    <TextView
        android:id="@+id/tv_content_10_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="나 혼자만 레벨업"
        android:textColor="@color/gray_900"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/iv_content_10"
        app:layout_constraintStart_toStartOf="@id/iv_content_10"
        app:layout_constraintTop_toBottomOf="@id/iv_content_10" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="웹툰"
        android:textColor="@color/gray_400"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/tv_content_10_title"
        app:layout_constraintTop_toBottomOf="@id/tv_content_10_title" />

</androidx.constraintlayout.widget.ConstraintLayout>