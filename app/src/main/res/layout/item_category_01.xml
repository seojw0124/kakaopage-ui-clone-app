<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_category_01"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_gray100_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_category_01"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_thunder"
        app:layout_constraintBottom_toBottomOf="@id/view_category_01"
        app:layout_constraintStart_toStartOf="@id/view_category_01"
        app:layout_constraintTop_toTopOf="@id/view_category_01" />

    <TextView
        android:id="@+id/tv_category_01"
        style="@style/AppTextCaption.Bold.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="지금핫한"
        app:layout_constraintBottom_toBottomOf="@id/iv_category_01"
        app:layout_constraintEnd_toStartOf="@id/iv_category_arrow_01"
        app:layout_constraintStart_toEndOf="@id/iv_category_01"
        app:layout_constraintTop_toTopOf="@id/iv_category_01" />

    <ImageView
        android:id="@+id/iv_category_arrow_01"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_arrow_category"
        app:layout_constraintBottom_toBottomOf="@id/view_category_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_category_01" />

</androidx.constraintlayout.widget.ConstraintLayout>